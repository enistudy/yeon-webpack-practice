{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es6", "esnext", "dom"],
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist/",
    "paths": {
      "components/*": ["./src/components/*"],
      "containers/*": ["./src/containers/*"],
      "assets/*": ["./src/assets/*"],
      "constants/*": ["./constants/*"],
      "utils/*": ["./src/utils/*"]
    },
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*", "**/*.test.tsx"]
}
